{% for credential_id in session['credentials'] %}
<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">
        {% if 'name' in session['credentials'][credential_id]['issuer'] %}
            {{ session['credentials'][credential_id]['issuer']['name'] }}
        {% else %}
            Unknown Issuer
        {% endif %}
        </h5>
        <p class="mb-0">
            {% if 'name' in session['credentials'][credential_id] %}
                {{ session['credentials'][credential_id]['name'] }}
            {% else %}
                Unknown Credential
            {% endif %}
        </p>
    </div>
</div>
{% endfor %}